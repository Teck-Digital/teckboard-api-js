{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es5",
        "lib": [
            "es2020",
            "dom",
        ],
        "typeRoots": [
            "node_modules/@types",
            "index.d.ts"
        ],
        "module": "commonjs",
        "resolveJsonModule": true, 
        "declaration": true, 
        "outDir": "./dist",

        "esModuleInterop": true, 
        "forceConsistentCasingInFileNames": true, 
        "strict": true, 
 
        "skipLibCheck": true, 
    },
    "exclude": [
        "./dist/**/*",
        "__tests__/**/*"
    ]
}